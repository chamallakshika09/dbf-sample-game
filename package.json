{
  "name": "dbf-sample-game",
  "version": "1.0.0",
  "description": "Three JS socket based game",
  "main": "index.js",
  "repository": "https://github.com/chamallakshika09/dbf-sample-game.git",
  "author": "Chamal Perera <chamallakshika09@gmail.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "concurrently": "^7.2.2",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,jsx}": [
      "yarn format",
      "git add"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --find-config-path --write \"src/**/*.js\"",
    "serve": "node src/index.js",
    "lint": "eslint --fix src",
    "client": "cd client && yarn start",
    "server": "nodemon src/index.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "ammo.js": "kripken/ammo.js",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "helmet": "^5.1.0",
    "http-status": "^1.5.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.5.1",
    "validator": "^13.7.0",
    "winston": "^3.8.1"
  }
}
